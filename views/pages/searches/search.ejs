<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Search Results</title>
  <link rel="stylesheet" href="styles/reset.css">
  <link rel="stylesheet" href="styles/base.css">
  <link rel="stylesheet" href="styles/layout.css">
  <link rel="stylesheet" href="styles/modules.css">
</head>
<body>
  <% results.forEach( result => { %>
    <div>
    <img src='<%=result.img_url %>'/>
    <h3><%= result.title %></h3>
    <h3>by <%= result.author %></h3>
    <p><%= result.description %></p>
    <p><%= result.isbn %></p>
    <p><%= result.bookshelf %></p>
    <button id="selector">Select</button>
    <form method="POST" action="/books/<%= result.id %>">
      <input name="title" class="hideForm" type="text" value="<%= result.title %>">
      <input name="author" class="hideForm" type="text" value="<%= result.author %>">
      <input name="description" class="hideForm" type="text" value="<%= result.description %>">
      <input name="isbn" class="hideForm" type="text" value="<%= result.isbn %>">
      <input name="image_url" type="hidden" value="<%= result.img_url %>">
      <input name="bookshelf" class="hideForm" type="text" value="<%= result.bookshelf %>">
      <input id="submit" type="submit" value="Save">
    </form>
  </div>
    <%}) %>
  </body>
</html> 